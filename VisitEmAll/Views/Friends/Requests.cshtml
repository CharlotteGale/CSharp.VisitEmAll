@model VisitEmAll.Models.ViewModels.FriendsViewModel

<div class="container mt-5">
    <div class="row justify-content-center">
        <div class="col-md-6">
            <div class="d-flex justify-content-between align-items-center mb-4">
                <h2>Friend Requests</h2>
                <a asp-action="Index" class="btn btn-outline-secondary btn-sm">Back to Friends</a>
            </div>

            @if (!Model.PendingRequests.Any())
            {
                <div class="text-center py-5">
                    <i class="bi bi-person-check text-muted" style="font-size: 3rem;"></i>
                    <p class="mt-3 text-muted">All caught up! No pending requests.</p>
                </div>
            }
            else
            {
                <div class="list-group shadow-sm">
                    @foreach (var request in Model.PendingRequests)
                    {
                        <div class="list-group-item d-flex align-items-center justify-content-between p-3">
                            <div class="d-flex align-items-center">
                                <img src="https://ui-avatars.com/api/?name=@Uri.EscapeDataString(request.Requester.Name)" 
                                     class="rounded-circle me-3" width="45">
                                <div>
                                    <h6 class="mb-0">@request.Requester.Name</h6>
                                    <small class="text-muted">wants to be friends</small>
                                </div>
                            </div>
                            <div class="d-flex gap-2">
                                <form asp-action="Accept" method="post" class="m-0">
                                    <input type="hidden" name="id" value="@request.Id" />
                                    <button type="submit" class="btn btn-primary btn-sm px-3">Accept</button>
                                </form>
                                <form asp-action="Reject" method="post" class="m-0">
                                    <input type="hidden" name="id" value="@request.Id" />
                                    <button type="submit" class="btn btn-outline-danger btn-sm">Reject</button>
                                </form>
                            </div>
                        </div>
                    }
                </div>
            }
        </div>
    </div>
</div>